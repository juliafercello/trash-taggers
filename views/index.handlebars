<hr>

<div class="row">
  <div class="col-6">
    <h3><strong>Login &amp; Tell Us What You Want to Do!</strong></h3>
    <a class="btn btn-primary" href="/" role="button">Home</a>
    <a class="btn btn-primary" href="/auth/google" role="button">Login with Google</a>
    <a class="btn btn-primary modalBtn" href="#" data-action="create-event" role="button">Create Event</a>
    <a class="btn btn-primary" href="/logout" role="button">Logout</a>
    <br>
    {{#if user}}
    You are logged in as {{user.fullName}}
    {{/if}}

    <hr>

    <h3><strong>Current Events</strong></h3>

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Event Name</th>
          <th scope="col">Location</th>
          <th scope="col">Date</th>
          <th scope="col">Join</th>
        </tr>
      </thead>
      <tbody>
        {{#if events}}
        {{#each events}}
        <tr>
          <td><a href="/event/{{id}}">{{eventTitle}}</a></td>
          <td>{{eventLocation}}</td>
          <td>{{eventDateTime}}</td>
          <td><a class="btn btn-primary modalBtn" data-id="{{id}}" href="#" role="button" data-action="join">Join</a></td>
        </tr>
        {{/each}}
        {{/if}}
      </tbody>
    </table>
    <a href="/events">view all events</a>
  </div>

  <div class="col-6">
    <div id="map"></div>
    <script>
      function initMap() {
        var uluru = { lat: 44.983, lng: -93.184 };
        var map = new google.maps.Map(
          document.getElementById('map'), { zoom: 7, center: uluru });
        var marker = new google.maps.Marker({ position: uluru, map: map });
      }
    </script>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <h3><strong>Check Out All the Good That's Being Done Already!</strong></h3>

    <br>

    <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active" data-interval="5000">
          <img src="./images/trash1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" data-interval="5000">
          <img src="./images/trash3.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="./images/trash5.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>