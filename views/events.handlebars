<!-- =============== VIEW ALL EVENTS =============== -->

<div id="events">
    <div class="container">

        <!-- =============== page title =============== -->
        {{> page-header title="All Events" }}

        <!-- =============== TABLE OF ALL EVENTS =============== -->
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Event Name</th>
                            <th scope="col">Location</th>
                            <th scope="col">Date</th>
                            <th scope="col">Description</th>
                            <th scope="col">Bag Needed?</th>
                            <th scope="col">Join</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if events}}
                        {{#each events}}
                        <tr>
                            <td><a href="/event/{{id}}">{{eventTitle}}</a></td>
                            <td>{{eventLocation}}</td>
                            <td>{{eventDateTime}}</td>
                            <td>{{eventDesc}}</td>
                            <td>{{byob}}</td>
                            <td><a class="btn btn-primary" data-id="{{id}}" href="#" role="button">Join</a></td>
                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>